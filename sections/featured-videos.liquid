<style>
  #shopify-section-{{ section.id }} {
    --v-width: {{ section.settings.v_width }}px;
    --v-height: {{ section.settings.v_height }}px;
    --v-height-mbl: {{ section.settings.v_height_mbl }}px;
    --v-radius: {{ section.settings.v_border_radius }}
    {% if section.settings.v_border_radius > 0 %}%{% else %}px{% endif %};
    --title-size: {{ section.settings.section_title_size }}px;
    --title-size-mbl: {{ section.settings.section_title_size_mbl }}px;
    --bullet-color: #e0e0e0;
    --bullet-active: #8D482FFF;
    --full-width: 100%;
    --display-none: none;
  }
</style>

<div id="video-section-{{ section.id }}" class="featured_videos" data-section-id="{{ section.id }}">
  {% if section.settings.section_title != blank %}
    <h1 class="section_title">{{ section.settings.section_title }}</h1>
  {% endif %}

  <div class="swiper video-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide" {{ block.shopify_attributes }}>
          <div class="video-wrapper">
             {%- if block.settings.video_file != blank -%}
               {{ block.settings.video_file | video_tag:
                autoplay: block.settings.autoplay,
                loop: true,
                muted: true,
                controls: false,
                playsinline: true,
                image_size: '600x',
                alt: section.settings.title
              }}
             {%- else -%}
               {{ 'product-1' | placeholder_svg_tag: 'videos_placeholder' }}
             {%- endif -%}
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="swiper-pagination"></div>
  </div>
</div>

