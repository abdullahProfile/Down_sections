<script>
  function initVideoSwiper(container) {
    const sections = container ? [container] : document.querySelectorAll('.featured_videos');

    sections.forEach(section => {
      const swiperEl = section.querySelector('.video-swiper');
      if (!swiperEl || swiperEl.classList.contains('swiper-initialized')) return;

      new Swiper(swiperEl, {
        slidesPerView: 'auto',
        spaceBetween: 20,
        centeredSlides: false,
        grabCursor: true,
        watchOverflow: true,
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        }
      });
    });
  }

  document.addEventListener('DOMContentLoaded', () => initVideoSwiper());

  document.addEventListener('shopify:section:load', (e) => {
     initVideoSwiper(e.target);
  });
</script>

