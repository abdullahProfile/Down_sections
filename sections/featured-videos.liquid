{% stylesheet %}
  .featured_videos {
    margin-block: 40px;
    padding: 0 20px;
    overflow: hidden;
  }

 .featured_videos .section_title {
    font-size: var(--title-size);
    margin-bottom: 40px;
    text-align: center;
    font-weight: bold;
  }

  .featured_videos .swiper-slide {
    width: var(--full-width);
    max-width: var(--v-width);
    height: auto;
    display: flex;
    justify-content: center;
  }

  .featured_videos .video-wrapper {
    width: 100%;
    height: var(--v-height);
    border-radius: var(--v-radius);
    overflow: hidden;
    background: #000;
  }

  .featured_videos video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .featured_videos .swiper-pagination-bullet {
    width: 80px;
    height: 8px;
    border-radius: 4px;
    background-color: var(--bullet-color);
    opacity: 1;
    transition: background 0.3s, transform 0.2s;
  }

  .featured_videos .swiper-pagination {
    display: flex;
    justify-content: center;
  }

  .featured_videos .swiper-pagination-lock {
    display: var(--display-none);
  }

  .featured_videos .swiper-wrapper {
    padding-bottom: 50px;
  }

  .featured_videos .swiper-pagination-bullet-active {
    background-color: var(--bullet-active);
    transform: scale(1.1);
  }

  @media (max-width: 768px) {
    .featured_videos .section_title {
      font-size: var(--title-size-mbl);
    }

    .featured_videos .video-wrapper {
      height: var(--v-height-mbl);
    }
  }
{% endstylesheet %}

